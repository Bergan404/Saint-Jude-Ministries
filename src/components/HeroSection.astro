---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    imagePath: string | ImageMetadata;
	title: string;
	body: string;
}

const { imagePath, title, body } = Astro.props

const imagePathAwaiting = await getImage({
    src: imagePath,
    format: "png"
});
---

<header class="hero" id="homecover-1">
    <picture>
        <img src={imagePathAwaiting.src} alt={title}  id="houseopen"/>
    </picture>
    <div class="overlay"></div>
    <div class="hero-content hero_text_shadow" data-aos="zoom-in" data-aos-easing="ease-out-back" data-aos-duration="2000" data-aos-delay="0">
        <h1 class="bold mb-4">{title}</h1>
        <h2>{body}</h2>
    </div>
</header>

<style>
    .hero {
        height: 340px;
        position: relative;
    }
	header {
		margin: auto;
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	#houseopen {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
        width: 100%;
        height: 100%;
		object-fit: cover;
	}
	.hero-content {
		display: grid;
		place-content: center;
		height: 100%;
		width: 100%;
		z-index: 10;
		position: relative;
		text-align: center;
	}
	.home_content {
		background-size: cover;
	}
	.image_box img{
		width: 100%;
		height: 100%;
	}
	@media screen and (max-width: 500px) {
		header {
			margin: auto;
			padding: 1rem;
			color: white;
			font-size: 20px;
			line-height: 1.6;
			height: 75vh;
			position: relative;
		}
		.hero-content {
			display: grid;
			place-content: center;
			height: 100%;
			width: 100%;
			z-index: 10;
			position: relative;
			text-align: center;
		}
	}
</style>