---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    imagePath: string | ImageMetadata;
	title: string;
}

const { imagePath, title} = Astro.props

const imagePathAwaiting = await getImage({
    src: imagePath,
    format: "jpeg",
});
---

<div class="col col-3-5 gallery">
    <img src={imagePathAwaiting.src} alt={title}>
    <div class="p-4 text-center">
        <h2 class="gallery-headers">{title}</h2>
    </div>
</div>
